    <div class="card shadow mb-4" mt-4>
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Daftar Nama Divisi</h6>
        </div>

        <!-- Button trigger modal insert gajadi, grgr dalam satu layout cuman bisa make 1 model aja -->
        @*        <button type="button" class="btn btn-primary mb-4" data-toggle="modal" data-target="#staticBackdrop">
    Tambah Data Barang
    </button>*@
        <!-- Button trigger modal insert -->
        <a asp-action="CreateDivisi">
            <div>
                <button type="button" class="btn btn-primary ml-4 mt-2 mb-2">
                    Tambah Divisi
                </button>
            </div>
        </a>


        <div class="card-body ">
            <table class="table table-bordered table-striped" id="dataTable1">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Nama Divisi</th>
                        <th scope="col">Action</th>

                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nama)
                        </td>
                        <td>
                            @*<a type="button" class="btn btn-info btn-sm" asp-action="EditDivisi" asp-route-id="@item.Id">Edit</a>*@
                            <a type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#hapus">Delete</a>
                            <!-- Modal Hapus Data -->
                            <div class="modal fade" id="hapus" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Hapus Data</h5>

                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <form>
                                            <div class="modal-body">
                                                <p>Apakah anda yakin ingin menghapus data divisi?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-primary" asp-action="DeleteDivisi" asp-route-id="@item.Id">Yes</button>
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

