    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tambah Divisi</h6>
        </div>
        <div class="container mt-4">
            <div class="form">
                <form asp-action="CreateDivisi">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="@Model.Nama" class="control-label">Nama Divisi</label>
                        <input asp-for="@Model.Nama" class="form-control" />
                        <span asp-validation-for="@Model.Nama" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Tambah Data Divisi" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="ml-4 mt-2 mb-4">
            <a asp-action="Divisi">Back to List</a>
        </div>
    </div>


    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
